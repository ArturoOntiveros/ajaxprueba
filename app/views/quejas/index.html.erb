<p id="notice"><%= notice %></p>

<h1>Listing Quejas</h1>

<table>
  <thead>
    <tr>
      <th>User</th>
      <th>Text</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @quejas.each do |queja| %>
      <tr>
        <td><%= queja.user %></td>
        <td><%= queja.text %></td>
        <td><%= link_to 'Show', queja %></td>
        <td><%= link_to 'Edit', edit_queja_path(queja) %></td>
        <td><%= link_to 'Destroy', queja, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

